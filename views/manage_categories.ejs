<%- include partials/header.ejs %>

<section id="manageCategories" class="py-5">
  <div class="container">
    <div class="row d-flex align-items-center">
      <div class="col-md-9 text-center text-md-left">
        <h1 class="mb-0">
          <%= title %>
        </h1>
      </div>
      <div class="col-md-3 text-center text-md-right mt-3 mt-md-0">
        <a href="/manage/categories/add" class="btn btn-success">Add Category</a>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <hr class="mb-5">
      </div>
    </div>

    <div class="row">
      <div class="col">
        <ul class="list-group">
          <% categories.forEach((category) => { %>
          <li class="list-group-item d-flex align-items-center"><%= category.title %> <a href="/manage/categories/edit/<%= category._id %>" class="btn btn-warning btn-sm ml-auto">Edit</a></li>
          <% }); %>
        </ul>
      </div>
    </div>
  </div>
</section>

<%- include partials/footer.ejs %>