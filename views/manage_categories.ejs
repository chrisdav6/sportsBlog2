<%- include partials/header.ejs %>

<section id="manageCategories" class="py-5">
  <div class="container">
    <h1>
      <%= title %>
    </h1>
    <hr class="mb-5">

    <div class="row">
      <div class="col">
        <ul class="list-group">
          <% categories.forEach((category) => { %>
          <li class="list-group-item d-flex align-items-center"><%= category.title %> <a href="/manage/categories/edit/<%= category._id %>" class="btn btn-warning btn-sm ml-auto">Edit</a></li>
          <% }); %>
        </ul>
      </div>
    </div>
  </div>
</section>

<%- include partials/footer.ejs %>