<%- include partials/header.ejs %>

<section id="feature" class="text-light d-flex align-items-center">
  <div class="container">
    <div class="row">
      <div class="col">
        <h1 class="display-2 mt-5">SportsBlog</h1>
        <p class="lead">Get your sports fix today!</p>
      </div>
    </div>
  </div>
</section>

<section id="articles" class="py-5">
  <div class="container">
    <div class="row">
      <div class="col">
        <ul class="list-group">
          <% articles.forEach((article) => { %>
          <li class="list-group-item">
            <h3><a href="/articles/show/<%= article._id %>" class="text-info"><%= article.title %></a></h3>
            <div>
              <p class="mb-0">Created:
                <%= moment(article.created_at).format("MMMM Do YYYY, h:mma") %>
              </p>
              <p class="mb-0">Author:
                <%= article.author %>
              </p>
            </div>
          </li>
          <% }); %>
        </ul>
      </div>
    </div>
  </div>
</section>

<%- include partials/footer.ejs %>
