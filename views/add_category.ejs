<%- include partials/header.ejs %>

  <section id="addCategory" class="py-5">
    <div class="container">
      <h1><%= title %></h1>
      <hr class="mb-5">

      <div class="row">
        <div class="col">
          <form action="/categories/add" method="post">
            <div class="form-group">
              <label for="title">Category Name</label>
              <input type="text" class="form-control form-control-lg" name="title" id="title" required>
            </div>
            <div class="form-group">
              <label for="description">Category Description</label>
              <textarea class="form-control form-control-lg" name="description" id="description" row="5" required></textarea>
            </div>
            <div class="d-flex align-items-center mt-5">
              <a href="/manage/categories" class="text-dark mb-0"><i class="fas fa-angle-left"></i> Back</a>
              <button class="btn btn-success btn-lg ml-auto">Create Category</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
  
<%- include partials/footer.ejs %>